<a href="/user">HOME</a>
<div id="watchlist"></div>
<% movies.forEach(movie => { %>
    <h1> <%= movie.Title %> </h1>
<dvi>
    <ul>
        <img src="<%= movie.Poster %>"  alt="poster">
        
        <a href="/detail/<%= movie.imdbID%>">More Info</a>

        <form method="POST" action="/watchlist">
            <input hidden type="text" name="title" value="<%= movie.Title %>">
            <input hidden type="text" name="poster" value="<%= movie.Poster %>">
            <input hidden type="text" name="imdbID" value="<%= movie.imdbID %>">
            <input type="hidden" name="user" value="<%= username %>">
            <div class='add'></div>
        </form>
    </ul>
</dvi>    
<% }) %>

<script>
    if (user) {
        const buttons = document.getElementsByClassName('add')
        for(let i = 0; i<buttons.length; i++) {
            buttons[i].innerHTML = "<button type='submit'>Add Movie to Watchlist</button>"
        }
        console.log(currentUser.id)
        document.getElementById('watchlist').innerHTML = "<a href='/watchlist'>Watchlist</a>"
    }
</script>

